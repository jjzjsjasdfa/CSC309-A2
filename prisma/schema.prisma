datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum RoleType {
  regular
  cashier
  manager
  superuser
}

enum TransactionType {
  purchase
  redemption
  adjustment
  event
  transfer
}

enum PromotionType {
  automatic
  onetime
}

model User {
  id         Int      @id @default(autoincrement())
  utorid     String   @unique
  username   String
  password   String
  email      String   @unique
  role       RoleType
  verified   Boolean  @default(false)
  activated  Boolean  @default(false)
  expiresAt  DateTime
  resetToken String
}
